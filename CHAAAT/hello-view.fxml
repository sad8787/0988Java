<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.chaaat.HelloController">
    <TextArea fx:id="textArea" editable="false" prefHeight="250" prefWidth="275" style="-fx-control-inner-background:  #C3C3C4; -fx-font-family: Consolas; -fx-highlight-fill: #00ff00; -fx-highlight-text-fill: #000000; -fx-text-fill: #000000;">
        <font>
            <Font name="JetBrains Mono Regular" size="16.0" />
        </font>
    </TextArea>
    <HBox>
        <TextField fx:id="textField" onAction="#send" prefHeight="25" prefWidth="195" />
        <Button onAction="#send" prefHeight="25" prefWidth="80" style="-fx-background-color: #00008B;" text="Отправить" textFill="WHITE" />
    </HBox>
    <Button onAction="#connect" prefHeight="25" prefWidth="Infinity" text="Подключиться" />

</VBox>
